<?xml version="1.0" encoding="utf-8"?>
<com.android.camera.ui.RotateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/codescanitem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="66dp"
    android:layout_marginLeft="220dp"
    android:visibility="gone"
    >

    <LinearLayout
        android:id="@+id/scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="#cc000000"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/scanfromphotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingLeft="10dp"
            android:clickable="true"
            android:singleLine = "false"
            android:text="@string/qrcode_menu_scanfromphotos"/>

        <TextView
            android:id="@+id/scanhistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:singleLine = "false"
            android:paddingTop="4dp"
            android:paddingLeft="10dp"
            android:text="@string/qrcode_menu_scanhistory" />

        <!-- <TextView
            android:id="@+id/scansettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:singleLine = "false"
            android:paddingTop="4dp"
            android:paddingLeft="10dp"
            android:paddingBottom="4dp"
            android:text="@string/qrcode_menu_settings" /> -->
    </LinearLayout>

</com.android.camera.ui.RotateLayout>
