<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mmode_scanner_hint"
    style="@style/MModeHelpTipsLayoutStyle"
    >
    <TextView
        android:id="@+id/title"
        android:text="@string/pref_camera_scanner_label"
        android:textColor="@color/continuous_shot_title_background"
        android:textSize="@dimen/continuous_shot_title_textsize"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/mmode_help_tip_margin_top"
        android:layout_marginLeft="@dimen/mmode_help_tip_margin"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/content1"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/mmode_help_tip_margin"
        android:layout_marginTop="@dimen/mmode_help_tip_margin"
        android:text="@string/mode_scanner_first_time_tip_content1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/continuous_shot_content_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/content2"
        android:layout_marginLeft="@dimen/mmode_help_tip_margin"
        android:layout_below="@id/content1"
        android:layout_marginTop="@dimen/mmode_help_tip_margin"
        android:text="@string/mode_scanner_first_time_tip_content2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/continuous_shot_content_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/content3"
        android:layout_marginLeft="@dimen/mmode_help_tip_margin"
        android:layout_below="@id/content2"
        android:text="@string/mode_scanner_first_time_tip_content3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/continuous_shot_content_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/content4"
        android:layout_marginLeft="@dimen/mmode_help_tip_margin"
        android:layout_below="@id/content3"
        android:text="@string/mode_scanner_first_time_tip_content4"
        android:textColor="@android:color/white"
        android:textSize="@dimen/continuous_shot_content_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/content5"
        android:layout_marginLeft="@dimen/mmode_help_tip_margin"
        android:layout_below="@id/content4"
        android:text="@string/mode_scanner_first_time_tip_content5"
        android:textColor="@android:color/white"
        android:textSize="@dimen/continuous_shot_content_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/mode_scanner_hint_btn"
        style="@style/MModeHelpTipsBtnStyle"
        />
</RelativeLayout>
