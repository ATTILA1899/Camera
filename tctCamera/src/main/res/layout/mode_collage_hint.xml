<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mmode_collage_hint"
    style="@style/MModeHelpTipsLayoutStyle"
    >
    <TextView
        android:id="@+id/title"
        android:text="@string/pref_camera_capturemode_enrty_collage"
        android:textColor="@color/continuous_shot_title_background"
        android:textSize="@dimen/continuous_shot_title_textsize"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/content2"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="@dimen/mmode_help_tip_margin"
        android:text="@string/mode_collage_first_time_tip"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/mode_collage_hint_btn"
        style="@style/MModeHelpTipsBtnStyle"
        android:layout_marginBottom="100dp"
        />
</RelativeLayout>