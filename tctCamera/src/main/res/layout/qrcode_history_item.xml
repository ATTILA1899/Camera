<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:id="@+id/QRCodeHistory_Icon"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"/>
    <ImageView 
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:id="@+id/QRCodeHistory_Delete"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/btn_qrcode_delete"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:gravity="center_vertical">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFF2F2F2"
            android:id="@+id/QRCodeHistory_ContentText"
            android:singleLine="true"/>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFF7B400"
                android:id="@+id/QRCodeHistory_TypeText"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FFB2B2B2"
                android:id="@+id/QRCodeHistory_DateText"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#FF3D3D3D"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
