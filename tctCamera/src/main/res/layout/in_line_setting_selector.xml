<?xml version="1.0" encoding="utf-8"?>
<com.android.camera.ui.InLineSettingSelector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/click_ripple"
    android:id="@+id/layout_setting_selector"
    >
    <RelativeLayout 
        android:layout_marginStart="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/setting_item_list_margin"
        >
       <TextView android:id="@+id/title"
           android:textSize="@dimen/setting_item_text_size_xlarge"
	        style="@style/SettingItemTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:textColor="@color/primary_text"
	        android:layout_alignParentStart="true"/>
	    <TextView
	        android:id="@+id/content"
	        android:layout_below="@id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentStart="true"
	        android:textSize="12sp"
	        android:layout_gravity="center_vertical"
	        android:textColor="#ff777777"
	        />
    </RelativeLayout>

    <View 
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1.5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="#99444444"></View>
    
</com.android.camera.ui.InLineSettingSelector>
