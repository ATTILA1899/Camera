<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_layer_expression"
    style="@style/ReviewExpressionThumbnailGroup"
    android:visibility="gone" >

    <TableLayout
        android:id="@+id/expression_tablelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="21dp"
        android:layout_marginTop="60dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/expression_bg_1"
                android:layout_marginRight="-1dp"
                android:layout_marginBottom="-1dp">

                <com.android.camera.ui.RotateLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <TextView
                        android:id="@+id/expression1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expression_text_1" />
                </com.android.camera.ui.RotateLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/expression1"
                        style="@style/ReviewThumbnail"
                        android:clickable="true"
                        android:layout_margin="1dp"
                        android:contentDescription="@string/accessibility_review_thumbnail"
                        android:focusable="false" />
                </LinearLayout>
            </FrameLayout>

            <!-- android:background="@drawable/expression_border_last_picture" -->

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/expression_bg_2"
                android:layout_marginLeft="-1dp"
                android:layout_marginBottom="-1dp">

                <com.android.camera.ui.RotateLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <TextView
                        android:id="@+id/expression2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expression_text_2" />
                </com.android.camera.ui.RotateLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/expression2"
                        style="@style/ReviewThumbnail"
                        android:clickable="true"
                        android:layout_margin="1dp"
                        android:contentDescription="@string/accessibility_review_thumbnail"
                        android:focusable="false" />
                </LinearLayout>
            </FrameLayout>
            <!-- android:background="@drawable/expression_border_last_picture" -->
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/expression_bg_4"
                android:layout_marginRight="-1dp"
                android:layout_marginTop="-1dp">

                <com.android.camera.ui.RotateLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <TextView
                        android:id="@+id/expression4_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expression_text_4" />
                </com.android.camera.ui.RotateLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/expression4"
                        style="@style/ReviewThumbnail"
                        android:clickable="true"
                        android:layout_margin="1dp"
                        android:contentDescription="@string/accessibility_review_thumbnail"
                        android:focusable="false" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/expression_bg_3"
                android:layout_marginTop="-1dp"
                android:layout_marginLeft="-1dp">

                <com.android.camera.ui.RotateLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <TextView
                        android:id="@+id/expression3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expression_text_3" />
                </com.android.camera.ui.RotateLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/expression3"
                        style="@style/ReviewThumbnail"
                        android:clickable="true"
                        android:layout_margin="1dp"
                        android:contentDescription="@string/accessibility_review_thumbnail"
                        android:focusable="false" />
                </LinearLayout>
            </FrameLayout>
            <!-- android:background="@drawable/expression_border_last_picture" -->
            <!-- android:background="@drawable/expression_border_last_picture" -->
        </TableRow>
    </TableLayout>

</FrameLayout>