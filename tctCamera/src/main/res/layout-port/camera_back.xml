<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:gravity="bottom" >
    
     <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:gravity="bottom|left" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_view_margin"
        android:layout_marginLeft="24dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal" >
            
                <com.android.camera.ui.RotateImageView
                    android:id="@+id/camera_back_switch_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_shutter_back_normal"
                    android:layout_gravity="center" />
                
      
        </LinearLayout>
        <com.jrdcamera.modeview.FloatingActionsMenu
            android:id="@+id/multiple_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            fab:addButtonIcon="@drawable/polaroid_menu"
            fab:addButtonColorPressed="#f1f1f1"
            >
 		<com.jrdcamera.modeview.FloatingActionButton
            	android:id="@+id/polaroid_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:icon="@drawable/polaroid_one"
                fab:colorPressed="#f1f1f1"
                fab:colorNormal="#00f1f1"
                fab:size="normal"/>
        <com.jrdcamera.modeview.FloatingActionButton
            	android:id="@+id/polaroid_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:colorPressed="#f1f1f1"
                fab:icon="@drawable/polaroid_two"
                fab:colorNormal="#00f1f1"
                fab:size="normal"/>

        <com.jrdcamera.modeview.FloatingActionButton
            	android:id="@+id/polaroid_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:icon="@drawable/polaroid_four"
                fab:colorPressed="#f1f1f1"
                fab:colorNormal="#00f1f1"
                fab:size="normal"/>
        

    </com.jrdcamera.modeview.FloatingActionsMenu>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>